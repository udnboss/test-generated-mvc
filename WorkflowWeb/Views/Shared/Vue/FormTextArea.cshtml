<script id="formTextAreaComponent" type="text/template">
    <div class="form-group row">
        <label class="col-form-label col-sm-2">{{label}}</label>
        <div class="col-sm-10">
            <textarea rows="6" class="form-control" v-bind:value="value" v-on:input="onInput" />
        </div>
    </div>
</script>

<script>
    Vue.component("v-form-textarea", {
        props: ['label', 'value'],
        methods: {
            onInput: function (event) {
                this.$emit('input', event.target.value)
            }
        },
        template: "#formTextAreaComponent"
    });
</script>