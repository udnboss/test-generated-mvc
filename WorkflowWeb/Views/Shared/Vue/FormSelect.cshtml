<script id="formSelectComponent" type="text/template">
    <div class="form-group row">
        <label class="col-form-label col-sm-2">{{label}}</label>
        <div class="col-sm-10">
            <select class="form-control" v-model="selectedValue" v-on:change="onInput">
                <option disabled value="">-</option>
                <option v-for="o in options" :value="o.Value">{{ o.Text }}</option>
            </select>
        </div>
    </div>
</script>

<script>
    Vue.component("v-form-select", {
        props: ['label', 'value', 'options'],
        data: function () {
            return {
                selectedValue: this.value
            }
        },
        methods: {
            onInput: function (event) {
                this.$emit('input', event.target.value)
            }
        },
        template: "#formSelectComponent"
    });
</script>